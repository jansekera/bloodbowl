{
    "name": "bloodbowl/blood-bowl",
    "description": "Blood Bowl board game - web application",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "twig/twig": "^3.23",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse"
    }
}
